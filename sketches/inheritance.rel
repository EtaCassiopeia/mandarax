package org.mandarax.dsl.sketches.inheritance;

@author="jens"
rel Parent(Person parent,Person child) queries getParent(child),getChild(parent),isParent(parent,child) {
	// some rules here
	// extends in Father will add rule:  Father(father,child) -> Parent(parent,child)
}

@author="jens"
rel Father(MalePerson father,Person child) extends Parent queries getFather(child),isFather(father,child) {
	// some rules here	
	@id="rule1"
	rule Son(x,y) -> Father(y,x)
	facts importedFatherRelationships 
}

@author="jens"
rel GradFather(MalePerson gfather,Person child)  queries getGrandFather(child),isGrandFather(gfather,child) {
	// some rules here
	@id="rule2"
	rule1 Son(x,y) & Son(y,z) -> GrandFather(x,z)
}
